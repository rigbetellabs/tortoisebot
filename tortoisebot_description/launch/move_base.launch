<?xml version="1.0" ?>

launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <param file="$(find tortoisebot3_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <param file="$(find tortoisebot3_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <param file="$(find tortoisebot3_navigation)/param/local_costmap_params.yaml" command="load" />
    <param file="$(find tortoisebot3_navigation)/param/global_costmap_params.yaml" command="load" />
    <param file="$(find tortoisebot3_navigation)/param/move_base_params.yaml" command="load" />
    <param file="$(find tortoisebot3_navigation)/param/sim_dwa_local_planner_params.yaml" command="load" />
    <param file="$(find tortoisebot3_navigation)/param/trajectory_planner.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
  
</launch>
